<Application x:Class="ElevatorSystem.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ElevatorSystem"
             xmlns:converters="clr-namespace:ElevatorSystem.UI.Converters" 
             Startup="App_OnStartup">
    <Application.Resources>
        <Style x:Key="buttonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Black" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="10" />
            <Setter Property="FontWeight" Value="Medium" />
        </Style>

        <Style x:Key="comboStyle" TargetType="{x:Type ComboBox}">
            <Setter Property="Background" Value="White" />
            <Setter Property="Foreground" Value="Gray" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Medium" />
        </Style>
        
        <converters:FloorSelectorConverter x:Key="FloorSelectorConverter"></converters:FloorSelectorConverter>
    </Application.Resources>
</Application>
